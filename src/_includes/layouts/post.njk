{% extends "base.njk" %}

{% block content %}
<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    
    <div class="post-meta">
      <time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time>
      
      {% if tags %}
      <div class="post-tags">
        {% for tag in tags %}
          {% if tag != "post" %}
          <span class="tag">{{ tag }}</span>
          {% endif %}
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </header>
  
  <div class="post-content flow">
    {{ content | safe }}
  </div>
</article>
{% endblock %}
